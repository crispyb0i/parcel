<h1>Parcel Calculator</h1>
<form action="/show">
  <div class="form-group">
   <h2>Dimensions</h2>
      <label for="width">Width</label>
      <input id="width" name="width" class="form-control" type="text">
    </div>
    <div class="form-group">
      <label for="length">Length</label>
      <input id="length" name="length" class="form-control" type="text">
    </div>
    <div class="form-group">
      <label for="height">Height</label>
      <input id="height" name="height" class="form-control" type="text">
    </div>

    <h2>Weight</h2>
    <div class="form-group">
      <label for="weight">Weight</label>
      <input id="weight" name="weight" class="form-control" type="text">
    </div>

    <h2>Speed of delivery</h2>
    <div class="radio">
      <label><input type="radio" name="speed" value="same_day">Same day</label>
    </div>
    <div class="radio">
      <label><input type="radio" name="speed" value="3-5_days">3-5 days</label>
    </div>
  <button type="submit" class="btn-success">Send</button>
</form>
